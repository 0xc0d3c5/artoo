{
  "manifest_version": 2,
  "name": "artoo",
  "description": "A client-side scraping toolbelt.",
  "version": "0.0.1",
  "permissions": [
    "background",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "chrome/icons/icon16.png",
    "48": "chrome/icons/icon48.png",
    "128": "chrome/icons/icon128.png"
  },
  "browser_action": {
    "default_title": "artoo",
    "default_icon": {
      "19": "chrome/icons/icon128.png",
      "38": "chrome/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["chrome/inject.js"],
    "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["chrome/csp.js"],
    "persistent": true
  },
  "web_accessible_resources": [
    "build/artoo.concat.js",
    "build/artoo.build.js",
    "chrome/csp.js"
  ],
  "content_security_policy": "default-src 'self';",
  "minimum_chrome_version": "33"
}
